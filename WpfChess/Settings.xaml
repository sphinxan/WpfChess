<Window x:Class="WpfChess.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChess"
        mc:Ignorable="d"
        Title="Настройки" Height="800" Width="800" Background="{DynamicResource BackgroundColor}">
    <Grid>
        <Border Margin="6" BorderThickness="5">
            <StackPanel>
                <Button Click="Color_Change">Поменять цвет фона</Button>

                <Button Click="BtnSaveAndExit_Click">Сохранить и продолжить</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
