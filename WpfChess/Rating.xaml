<Window x:Class="WpfChess.Rating"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChess"
        mc:Ignorable="d"
        Title="Rating" Height="800" Width="800" Background="{DynamicResource BackgroundColor}">
    <Grid>
        <Border>
            <StackPanel Name="RatingWindow">
                <TextBlock HorizontalAlignment="Center" FontSize="30">Имя: Счет</TextBlock>
                <TextBlock HorizontalAlignment="Center" FontSize="30">123: 1</TextBlock>
                <TextBlock HorizontalAlignment="Center" FontSize="30">456: 0</TextBlock>
                <Button Click="BtnExit_Click">Назад</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
