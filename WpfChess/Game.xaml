<Window x:Class="WpfChess.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChess"
        mc:Ignorable="d"
        Title="Game"  Height="800" Width="800" Background="{DynamicResource BackgroundColor}">

    <Grid>
        <Border Margin="6" BorderThickness="5">
            <Canvas Name="Field" SizeChanged="Field_SizeChanged"></Canvas>
        </Border>
    </Grid>

</Window>
