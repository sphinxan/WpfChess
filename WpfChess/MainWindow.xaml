<Window x:Class="WpfChess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChess"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800" Background="{DynamicResource BackgroundColor}">
    <Grid>
        <Border>
            <StackPanel>
                <TextBlock Margin="110" Text="Chess" HorizontalAlignment="Center" FontSize="90" FontWeight="DemiBold" Foreground="DarkBlue"/>
                <Button Click="BtnStartGame_Click" Margin="6">НАЧАТЬ ИГРУ</Button>
                <Button Click="BtnContinue_Click" Margin="6">ПРОДОЛЖИТЬ</Button>
                <Button Click="BtnSettings_Click" Margin="6">НАСТРОЙКИ</Button>
                <Button Click="BtnRating_Click" Margin="6">РЕЙТИНГ</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>

